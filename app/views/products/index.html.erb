<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Row</th>
      <th>Col</th>
      <th>Price</th>
      <th>soldCount</th>
      <th>available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.count %></td>
        <td><%= product.row %></td>
        <td><%= product.col %></td>
        <td><%= product.price %></td>
        <td><%= product.soldCount %></td>
        <td><%= product.count - product.soldCount %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

